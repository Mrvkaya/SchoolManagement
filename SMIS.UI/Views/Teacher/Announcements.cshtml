<div class="panel-container">

    <div class="panel-card">
        <div class="section-title"> Yeni Duyuru</div>

        <form method="post">
            <div class="form-group">
                <input name="Title" class="form-control" placeholder="Başlık" />
            </div>

            <div class="form-group">
                <textarea name="Content" class="form-control" rows="4" placeholder="İçerik"></textarea>
            </div>

            <button class="primary-btn">Paylaş</button>
        </form>
    </div>

    <div class="panel-card">
        <div class="section-title"> Paylaşılan Duyurular</div>

        @foreach (var item in Model)
        {
            <div class="announcement-card">
                <h4>@item.Title</h4>
                <small>@item.CreatedDate.ToString("dd.MM.yyyy HH:mm")</small>
                <p>@item.Content</p>
            </div>
        }

    </div>
    <a asp-action="Index" class="back-link"> Panele Dön</a>

</div>
