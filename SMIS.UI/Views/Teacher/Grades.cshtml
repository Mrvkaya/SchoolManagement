@model List<SMIS.Entities.Models.Grade>

<h2>Yeni Not Ekle</h2>

<form asp-action="AddGrade" method="post">
    <div>
        <label>Öğrenci Id</label><br />
        <input type="number" name="studentId" required />
    </div>

    <div>
        <label>Ders Adı</label><br />
        <input type="text" name="lessonName" required />
    </div>

    <div>
        <label>Not</label><br />
        <input type="number" name="score" required />
    </div>

    <br />
    <button type="submit">Kaydet</button>
</form>

<hr />

<h2>Not Listesi</h2>

<table border="1" cellpadding="8">
    <tr>
        <th>Öğrenci Id</th>
        <th>Ders</th>
        <th>Not</th>
        <th>İşlem</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.StudentId</td>
            <td>@item.LessonName</td>
            <td>@item.Score</td>
            <td>
                <a asp-action="EditGrade" asp-route-id="@item.Id">Düzenle</a>
            </td>
        </tr>
    }
</table>
