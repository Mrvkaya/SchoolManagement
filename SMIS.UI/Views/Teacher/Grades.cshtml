<div class="panel-container">

    <div class="panel-card">
        <div class="section-title"> Yeni Not Ekle</div>

        <form method="post">
            <div class="form-group">
                <input name="StudentId" class="form-control" placeholder="Öğrenci Id" />
            </div>

            <div class="form-group">
                <input name="LessonName" class="form-control" placeholder="Ders Adı" />
            </div>

            <div class="form-group">
                <input name="Score" class="form-control" placeholder="Not" />
            </div>

            <button class="primary-btn">Kaydet</button>
        </form>
    </div>

    <div class="panel-card">
        <div class="section-title"> Not Listesi</div>

        <table class="panel-table">
            <thead>
                <tr>
                    <th>Öğrenci</th>
                    <th>Ders</th>
                    <th>Not</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.StudentId</td>
                        <td>@item.LessonName</td>
                        <td>@item.Score</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <a asp-action="Index" class="back-link">Panele Dön</a>
</div>
