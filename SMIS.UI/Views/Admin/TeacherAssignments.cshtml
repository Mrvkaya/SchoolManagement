@model SMIS.UI.Models.TeacherAssignmentViewModel

<div class="admin-wrapper">

    <div class="admin-card">
        <div class="admin-title">Öğretmen Atama</div>

        <form asp-action="TeacherAssignments" method="post" class="assignment-form">

            <select name="TeacherId" required>
                <option value="">Öğretmen Seç</option>
                @foreach (var teacher in Model.Teachers)
                {
                    <option value="@teacher.Id">
                        @teacher.FullName
                    </option>
                }
            </select>

            <input type="text"
                   name="ClassName"
                   placeholder="Sınıf"
                   required />

            <input type="text"
                   name="LessonName"
                   placeholder="Ders"
                   required />

            <button type="submit" class="primary-btn">
                Ata
            </button>
        </form>
    </div>

    <div class="admin-card">
        <div class="section-title">Mevcut Atamalar</div>

        <div class="table-wrapper">
            <table class="admin-table">
                <thead>
                    <tr>
                        <th>Öğretmen</th>
                        <th>Sınıf</th>
                        <th>Ders</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Assignments)
                    {
                        <tr>
                            <td>@item.TeacherId</td>
                            <td>@item.ClassName</td>
                            <td>@item.LessonName</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <a asp-action="Index" class="back-link">Panele Dön</a>
</div>