@model IEnumerable<SMIS.Entities.Models.Announcement>

<div class="admin-wrapper">

    <!-- DUYURU EKLE -->
    <div class="admin-card">
        <div class="admin-title">Duyuru Yönetimi</div>

        <form asp-action="Announcements" method="post" class="announcement-form">

            <input type="text"
                   name="Title"
                   placeholder="Başlık"
                   required />

            <textarea name="Content"
                      rows="4"
                      placeholder="Duyuru içeriği..."
                      required></textarea>

            <button type="submit" class="primary-btn">
                Duyuru Ekle
            </button>
        </form>
    </div>

    <!-- DUYURU LİSTESİ -->
    <div class="admin-card">
        <div class="section-title">Yayınlanan Duyurular</div>

        <div class="announcement-list">
            @foreach (var item in Model.OrderByDescending(x => x.CreatedDate))
            {
                <div class="announcement-item">
                    <h3>@item.Title</h3>
                    <p>@item.Content</p>
                    <span class="announcement-date">
                        @item.CreatedDate.ToString("dd MMMM yyyy HH:mm")
                    </span>
                </div>
            }
        </div>
    </div>

</div>
