@model List<SMIS.Entities.Models.Announcement>

<h2>Duyuru Yönetimi</h2>

<form method="post">
    <input type="text" name="title" placeholder="Başlık" required />
    <br /><br />
    <textarea name="content" placeholder="Duyuru İçeriği" required></textarea>
    <br /><br />
    <button type="submit"> Duyuru Ekle</button>
</form>

<hr />

@foreach (var item in Model)
{
    <h4>@item.Title</h4>
    <p>@item.Content</p>
    <small>@item.CreatedDate</small>
    <hr />
}

