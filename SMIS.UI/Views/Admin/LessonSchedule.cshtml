@model IEnumerable<SMIS.Entities.Models.LessonSchedule>

<div class="admin-wrapper">

    <!-- FORM KARTI -->
    <div class="admin-card">
        <div class="admin-title">Ders Programı Oluştur</div>

        <form asp-action="LessonSchedule" method="post" class="schedule-form">

            <input type="text"
                   name="LessonName"
                   placeholder="Ders Adı"
                   required />

            <input type="text"
                   name="Day"
                   placeholder="Gün"
                   required />

            <input type="time"
                   name="Time"
                   required />

            <button type="submit" class="primary-btn">
                Kaydet
            </button>
        </form>
    </div>

    <!-- TABLO KARTI -->
    <div class="admin-card">
        <div class="section-title">Mevcut Ders Programı</div>

        <div class="table-wrapper">
            <table class="admin-table">
                <thead>
                    <tr>
                        <th>Ders</th>
                        <th>Gün</th>
                        <th>Saat</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.LessonName</td>
                            <td>@item.Day</td>
                            <td>@item.Hour</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
