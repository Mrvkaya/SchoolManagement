@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login</title>

    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>
<body>


        <!-- KARAKTER ALANI -->
        <div class="character-area">

            <div class="character-wrap">
                <div class="character pink">
                    <div class="eye left"></div>
                    <div class="eye right"></div>
                    <div class="mouth"></div>
                    <div class="cheek left"></div>
                    <div class="cheek right"></div>
                    <div class="heart"></div>
                </div>
            </div>

            <div class="character-wrap">
                <div class="character blue">
                    <div class="eye left"></div>
                    <div class="eye right"></div>
                    <div class="mouth"></div>
                    <div class="cheek left"></div>
                    <div class="cheek right"></div>
                    <div class="heart"></div>
                </div>
            </div>

            <div class="character-wrap">
                <div class="character green">
                    <div class="eye left"></div>
                    <div class="eye right"></div>
                    <div class="mouth"></div>
                    <div class="cheek left"></div>
                    <div class="cheek right"></div>
                    <div class="heart"></div>
                </div>
            </div>

            <div class="character-wrap">
                <div class="character yellow">
                    <div class="eye left"></div>
                    <div class="eye right"></div>
                    <div class="mouth"></div>
                    <div class="cheek left"></div>
                    <div class="cheek right"></div>
                    <div class="heart"></div>
                </div>
            </div>

        </div>

        <!-- LOGIN KART -->
        <form asp-action="Login" method="post" class="login-card">

            <h2>HOŞGELDİNİZ</h2>

            <input id="username" type="text" name="username" placeholder="Username" required />
            <input id="password" type="password" name="password" placeholder="Password" required />

            <button type="submit">Login</button>
            <div class="register-area">
                <span>Hesabın yok mu?</span>
                <a asp-controller="Account" asp-action="Register">Kayıt Ol</a>
            </div>

        </form>

    </div>
    <script src="~/js/login.js" asp-append-version="true"></script>
</body>
</html>
