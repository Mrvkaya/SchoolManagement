<h1 class="page-title">Ders Programım</h1>

<div class="admin-wrapper">

    <div class="admin-card">
        <div class="section-title">Haftalık Program</div>

        <div class="table-wrapper">
            <table class="admin-table">
                <thead>
                    <tr>
                        <th>Gün</th>
                        <th>Ders</th>
                        <th>Saat</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Day</td>
                            <td>@item.LessonName</td>
                            <td>@item.Hour</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <a asp-action="Index" class="back-link">Panele Dön</a>
    </div>

</div>
