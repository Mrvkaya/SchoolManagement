<h1 class="page-title">Notlarım</h1>

<div class="admin-wrapper">

    <div class="admin-card">
        <div class="section-title">Ders Başarılarım</div>

        <div class="table-wrapper">
            <table class="admin-table">
                <thead>
                    <tr>
                        <th>Ders</th>
                        <th>Not</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var grade in Model)
                    {
                        <tr>
                            <td>@grade.LessonName</td>
                            <td>@grade.Score</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <a asp-action="Index" class="back-link"> Panele Dön</a>
    </div>

</div>
